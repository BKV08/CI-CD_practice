pipeline
{
  agent any
    stages{

        stage('checkout')
        {

            steps 
            {

                sh 'echo Done!!!'
            }
        }

        stage('clone')
        {
            steps
            {
                sh 'rm -rf Jenkins-Zero-To-Hero'
                sh 'git clone https://github.com/BKV08/Jenkins-Zero-To-Hero.git'
                sh 'mvn clen install'

            }
        }

        stage('Final')
        {
            steps
            {
                sh 'pipeline completed'

            }
        }
        
        
    }
}
