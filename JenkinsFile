pipeline
{
  agent any
    stages{

        stage('checkout')
        {

            steps 
            {

                sh 'echo Done!!!'
            }
        }

        stage('clone')
        {
            steps
            {
                sh 'mkidr test_folder'
                sh 'cd test_folder'
                sh 'rm -rf Jenkins-Zero-To-Hero'
                sh 'git clone https://github.com/BKV08/Jenkins-Zero-To-Hero.git'
                

            }
        }
}

       post {
           always {
               echo ' pipeline completed '

                  }
             }
        
        
    
}
